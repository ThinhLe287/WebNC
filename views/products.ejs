<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách sản phẩm</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            width: 80%;
            margin: auto;
            text-align: center;
            position: relative;
        }

        h1 {
            color: #333;
        }

        /* Điều chỉnh vị trí giỏ hàng */
        .cart-link {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 20px;
            text-decoration: none;
            color: #333;
            display: flex;
            align-items: center;
        }

        .cart-link i {
            margin-right: 5px;
        }

        .cart-link:hover {
            color: #d9534f;
        }

        .product-list {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .product {
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 10px;
            width: 200px;
            text-align: center;
            position: relative;
            transition: transform 0.2s;
        }

        .product:hover {
            transform: scale(1.05);
        }

        .product img {
            width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .product-title {
            font-size: 18px;
            font-weight: bold;
            margin-top: 10px;
        }

        .product-price {
            color: #d9534f;
            margin: 10px 0;
        }

        /* Ẩn nút mặc định */
        button {
            background-color: #28a745;
            margin-left: 16%;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            display: none; /* Ẩn mặc định */
        }

        /* Khi hover vào sản phẩm, hiển thị nút */
        .product:hover button {
            display: block;
        }

        button:hover {
            background-color: #218838;
        }

    </style>
</head>
<body>
    <div class="container">
        <!-- Nút giỏ hàng với icon -->
        <a href="/cart" class="cart-link">
            <i class="fas fa-shopping-cart"></i>
        </a>
        <h1>Danh sách sản phẩm</h1>
        <div class="product-list">
            <% products.forEach((product) => { %>
                <div class="product">
                    <a href="/product/<%= product._id %>">
                        <img src="<%= product.image%>" alt="<%= product.name %>">
                    </a>
                    <div class="product-title"><%= product.name %></div>
                    <div class="product-price"><%= product.price.toLocaleString() %> VND</div>
                    <form action="/cart/add/<%= product._id %>" method="POST">
                        <button type="submit">Thêm vào giỏ hàng</button>
                    </form>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
