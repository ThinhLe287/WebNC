<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #5a2c20;
            background-color: #f7e7ce;
        }

        .container {
            width: 80%;
            margin: auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-top: 50px;
            margin-bottom: 30px;
        }

        .product-image img {
            width: 400px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .product-info {
            width: 50%;
        }

        .breadcrumb {
            font-size: 14px;
            color: #c06c50;
            text-transform: uppercase;
        }

        h1 {
            font-size: 32px;
            color: #8b3a23;
            margin-bottom: 10px;
        }

        .product-price {
            font-size: 24px;
            font-weight: bold;
        }

        .size-options button {
            padding: 10px 20px;
            margin-right: 10px;
            border: 2px solid #8b3a23;
            background: none;
            color: #8b3a23;
            font-weight: bold;
            cursor: pointer;
            border-radius: 5px;
            transition: 0.3s;
        }
        
        .size-options button:hover {
            background: #8b3a23;
            color: white;
        }
        
        .size-options button.active {
            background: #c06c50;
            color: white;
            border-color: #c06c50;
        }

        .quantity {
            display: flex;
            align-items: center;
            margin-top: 20px;
        }

        .quantity button {
            padding: 5px 15px;
            font-size: 18px;
            border: none;
            cursor: pointer;
            background: none;
            color: #8b3a23;
        }

        .quantity input {
            width: 40px;
            text-align: center;
            font-size: 16px;
            border: 1px solid #c06c50;
            border-radius: 5px;
            margin: 0 5px;
        }

        .add-to-cart {
            display: block;
            width: 100%;
            padding: 15px;
            background: none;
            color: #8b3a23;
            font-size: 18px;
            border: 2px solid #8b3a23;
            cursor: pointer;
            margin-top: 20px;
            border-radius: 5px;
            transition: 0.3s;
        }

        .add-to-cart:hover {
            background: #8b3a23;
            color: white;
        }

        .description {
            margin-top: 30px;
            padding: 10px;
            border-top: 2px solid #c06c50;
        }

        .description h3 {
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .description-content {
            display: none;
            padding: 10px 0;
        }

    </style>
</head>
<body>
    <%- include('partials/header') %>
    <div class="container">
        <div class="product-image">
            <img src="<%= product.image %>" alt="<%= product.name %>">
        </div>

        <div class="product-info">
            <div class="breadcrumb">TRANG CHỦ › <%= product.name.toUpperCase() %></div>

            <h1><%= product.name %></h1>
            <div class="product-price" id="product-price"><%= product.price.toLocaleString() %>₫</div>

            <div class="size-options">
                <button class="size-btn active" data-size="320ML" data-price="<%= product.price %>">320ML</button>
                <button class="size-btn" data-size="450ML" data-price="<%= product.price + 10000 %>">450ML</button>
            </div>
            
            <div class="quantity">
                <button onclick="changeQuantity(-1)">-</button>
                <input type="text" id="quantity" value="1">
                <button onclick="changeQuantity(1)">+</button>
            </div>

            <form action="/cart/add/<%= product._id %>" method="POST">
                <input type="hidden" name="size" id="selected-size" value="320ML">
                <input type="hidden" name="price" id="selected-price" value="<%= product.price %>">
                <button type="submit" class="add-to-cart" id="add-to-cart">THÊM VÀO GIỎ HÀNG • <%= product.price.toLocaleString() %>₫</button>
            </form>

            <div class="description">
                <h3 onclick="toggleDescription()" aria-expanded="false">MÔ TẢ <i class="fas fa-chevron-down"></i></h3>
                <div class="description-content">
                    <p><%= product.description %></p>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const cartItems = document.querySelectorAll(".cart-item");
            const checkoutButton = document.querySelector(".pay");
            
            function updateCheckoutButton() {
                if (cartItems.length > 0) {
                    checkoutButton.style.display = "block"; // Hiện nút nếu có sản phẩm
                } else {
                    checkoutButton.style.display = "none"; // Ẩn nút nếu giỏ hàng trống
                }
            }
        
            // Cập nhật ngay khi tải trang
            updateCheckoutButton();
        
            // Khi người dùng xoá sản phẩm
            document.querySelectorAll(".remove").forEach(button => {
                button.addEventListener("click", function (event) {
                    event.preventDefault();
                    const cartItem = this.closest(".cart-item");
                    
                    fetch(this.parentElement.action, { method: "POST" })
                        .then(response => {
                            if (response.ok) {
                                cartItem.remove(); // Xóa sản phẩm khỏi giao diện
                                updateCheckoutButton(); // Cập nhật trạng thái nút "Thanh toán"
                            }
                        })
                        .catch(error => console.error("Lỗi khi xoá sản phẩm:", error));
                });
            });
        });
    </script>
    <%- include('partials/footer') %>
</body>
</html>
